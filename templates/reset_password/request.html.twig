{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="not-italic font-sans font-semibold">Forgot password</h1>

    <div class="text-center m-4 p-4 md:border-2 md:border-slate-500 md:px-20 xl:px-40">
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email, {'attr': {'class': 'bg-slate-200 p-2'}}) }}
            <div>
                <small>
                    Enter your email address !!USERNAME!! and we will send you a
                    link to reset your password.
                </small>
            </div>

            <button class="btn btn-primary">Ask for reset password</button>
        {{ form_end(requestForm) }}
    </div>

{% endblock %}

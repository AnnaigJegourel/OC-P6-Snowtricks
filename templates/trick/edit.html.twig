{% extends 'base.html.twig' %}

{% block title %}Edit Trick{% endblock %}

{% block main %}

{% set bgImage = asset('images/hero.jpg') %}
<div    class="background bg-slate-100 md:border-y-2 md:border-t-cyan-700" 
        style="background-image: url({{ bgImage }}); background-position: top; background-size: contain; background-repeat: no-repeat;">
    <div id="trick-form" class="mb-20 md:mt-40 md:mx-32 md:flex md:flex-col md:items-center md:shadow-lg bg-white md:pb-6">

        {{ include('trick/_form.html.twig', {'button_label': 'Save'}) }}

        <div class="flex justify-center md:justify-end md:mr-10 md:w-full">
            <div class="m-2 w-20 border-2 border-slate-500 shadow-lg py-1 px-2 bg-pink-700 text-center text-slate-100">
                {{ include('trick/_delete_form.html.twig', {'button_label': 'Delete', 'no_icon': 'true'}) }}
            </div>
        </div>

    </div>
</div>
{% endblock %}

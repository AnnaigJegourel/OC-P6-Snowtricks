{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block main %}
    
    <!-- HERO -->
    <section class="h-screen bg-right bg-no-repeat bg-cover bg-gradient-to-t" style="background-image: url(images/hero.jpg)">
        <h1>Welcome to Snowtricks!</h1>
        <p class="px-4 text-center text-xl md:text-2xl font-serif italic text-slate-800">Collaborative blog about snowboard tricks - by and for snowboard fans</p>
    </section>
    <!-- CREATION BUTTON -->
    {% if is_granted('IS_AUTHENTICATED')%}
        <div class="-mt-40 mb-12 sm:mb-16 text-center">
            <a  class="btn p-4 rounded border-2 border-cyan-600  bg-cyan-500 hover:bg-slate-500 text-center text-xl text-white italic font-medium"
                href="{{ path('app_trick_new') }}">
                    Create a new Trick!
            </a>
        </div>
    {% endif %}
    <!-- SEE / HIDE BUTTON -->
    <div class="grid grid-cols-8 md:grid-cols-12">
        <button class="mb-20 col-start-8 md:col-start-12"
                onclick="toggleTricks()">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="4.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
            </svg>
        </button>
    </div>


{{ form_start(form) }}
    {# form_widget(form) #}

    {{ form_errors(form) }}
    
    <h3>Nom du trick:</h3>
    {{ form_row(form.name) }}

    <h3>Description du trick:</h3>
    {{ form_row(form.description) }}

    <h3>Cat√©gorie du trick:</h3>
    {{ form_row(form.category) }}


    <h3>Images du trick:</h3>
    {# form_row(form.images) #}
    {{ form_label(form.images) }}
    {{ form_errors(form.images) }}

    <ul id="images-fields-list"
        data-prototype="{{ form_widget(form.images.vars.prototype)|e }}"
        data-widget-tags="{{ '<li></li>'|e }}"
        data-widget-counter="{{ form.images|length }}"
    >
        {% for image in form.images %}
            <li>
                {{ form_errors(form.images) }}
                {{ form_widget(form.images) }}
            </li>
        {% endfor %}
    </ul>

    <button type="button"
        class="add-another-collection"
        data-list-selector="#images-fields-list">Add another image
    </button>

    <h3>C'est tout bon?</h3>
    <button class="btn">{{ button_label|default('Save') }}</button>

    <h3>-Fin du formulaire-</h3>
{{ form_end(form) }}
